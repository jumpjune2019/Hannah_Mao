package gameofdice;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JPanel;
import java.awt.event.*;

public class ButtonDemo  implements ActionListener {
	JLabel jlabMyRoll;
	JLabel jlabCompRoll;
	String first; //first button label
	String second; //second button label
	String Msg1;   //message to display your roll 
	String Msg2;   //message to display computers roll
	
	String MsgReset;
	
	public void setButtons(JPanel frm, String f, String s, String sMsg) {
		first = f;
		second = s;
		Msg1 = "";
		Msg2 = "";
		MsgReset = sMsg;
		
		
		JButton FlipButton = new JButton(first);
		JButton resetButton = new JButton(second);
		// Add action listeners.
		FlipButton.addActionListener(this);
		resetButton.addActionListener(this);
		// Add the buttons to the content pane.
		frm.add(FlipButton);
		frm.add(resetButton);
		// Create a label.
		jlabMyRoll = new JLabel("Waiting...");
		jlabCompRoll = new JLabel("Waiting...");
		// Add the label to the frame.
		frm.add(jlabMyRoll);
		frm.add(jlabCompRoll);
	}
	
	// Handle button events.

	public void actionPerformed(ActionEvent ae) {
		
		
		
		 RollDice myroll = ()-> (int) Math.floor(Math.random()*(6-1+1)+1);
		 RollDice comproll = ()-> (int) Math.floor(Math.random()*(6-1+1)+1);
	
		 int firstroll = myroll.roll();
		 int secondroll= comproll.roll();
		 
		 Msg1 = "You have rolled a " + (char)(firstroll+'0');
		 Msg2 = "I have rolled a " + (char)(secondroll+'0');
		
		
		if(ae.getActionCommand().equals(first)) {
			
			jlabMyRoll.setText(Msg1);
			jlabCompRoll.setText(Msg2);
			
		} else {
			jlabMyRoll.setText(MsgReset);
		}
	}
}

