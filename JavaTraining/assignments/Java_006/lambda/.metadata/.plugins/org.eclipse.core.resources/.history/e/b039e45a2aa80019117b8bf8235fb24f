		Integer[] numArr = {10,2,4,15,7,9,1,21};
		String[] strArr = {"claude", "Phil", "lois","clark","Arthur", "Mera","bruce"};
        
		System.out.printf("Initial String Array: %s", Arrays.toString(numArr)+'\n');
		
		//sorting array of integers
		MyTransform<Integer> ascArray = (v, a)->{ 
			
			Integer[] array= new Integer[8];
			 // true for ascend order
			
			for(int i=0;i<array.length;i++) {
				array[i]=v[i];
				
			}
			
			if(true) {
			 	
			Arrays.sort(array);
			}
			
		
		     
			Arrays.sort(array, Collections.reverseOrder()); 
				
			
			
			
			return array;
		};
		
		Integer[] array1 = ascArray.transform(numArr,true);
		Integer[] array2 = ascArray.transform(numArr,false);
		
		System.out.printf("Sorted ASC: %s", Arrays.toString(array1)+'\n');
		System.out.printf("Sorted ASC: %s", Arrays.toString(array2)+'\n');
		
        
