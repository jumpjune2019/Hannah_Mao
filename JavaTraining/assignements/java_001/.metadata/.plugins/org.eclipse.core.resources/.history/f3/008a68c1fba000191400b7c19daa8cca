import java.util.Arrays;

public class IndexMatch {
	
	String SearchArray[];
	String key;
	boolean foundcase;
	int result=-1;
	

	int indexOfOccuranceInArray(String SearchArray[],String key, boolean foundcase) {
		
		if(foundcase==true) {
			
			if(Arrays.asList(SearchArray).contains(key)) {
		
				result=true;
		
			}
		}
		
		
		//case insensitive
		else if(foundcase==false) {
			
			for(int i=0; i< SearchArray.length; i++ ) {
				
			    
			    if((SearchArray[i].toUpperCase()).equals(key.toUpperCase())) {
			    	result=i;	
			    }
	    
			}		
			
		}
		
		return result;
		
	}
	
}
